<div class="passwordBox animated fadeInDown">
    <div class="row">

        <div class="col-md-12">
            <div class="ibox-content">

                <h2 class="font-bold">Forgot your password</h2>

                <p>
                    Enter your email address and your password will be reset and emailed to you.
                </p>

                <div class="row">

                    <div class="col-lg-12">
                    	<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: 'm-t' }) do |f| %>
						  <%= devise_error_messages! %>

						  <div class="form-group">
						    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control", placeholder: "Email address" %>
						  </div>

						  <div class="actions">
						    <%= f.submit "Send me reset password instructions", class: "btn btn-primary block full-width m-b" %>
						  </div>
						<% end %>
                        <%= render "accounts/shared/back" %>
						<%= render "accounts/shared/links" %>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-6">
            Copyright Example Company
        </div>
        <div class="col-md-6 text-right">
            <small>Â© 2016-<%= Time.current.year %></small>
        </div>
    </div>
</div>
